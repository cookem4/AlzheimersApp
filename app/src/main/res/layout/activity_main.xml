<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mitch.alzheimersapp.MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/viewmedications"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginBottom="87dp"
        android:layout_marginTop="133dp"
        android:text="View Medications"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/addmedications"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addmedications"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginBottom="86dp"
        android:text="Add Medications"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/addcontact"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewmedications" />

    <Button
        android:id="@+id/addcontact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="99dp"
        android:text="Add Contact"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addmedications" />

</android.support.constraint.ConstraintLayout>
